{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    "src/api/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "coverage", "tests/**/*", "src/cli/**/*", "src/core/**/*"]
}
