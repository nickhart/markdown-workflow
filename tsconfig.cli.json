{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/cli/**/*", "src/core/**/*", "src/shared/**/*"],
  "exclude": ["src/app/**/*", "src/api/**/*", "tests/**/*", "node_modules"]
}
